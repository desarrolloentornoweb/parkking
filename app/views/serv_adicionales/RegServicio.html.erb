<div class="text-center">
  <h4>****************************************</h4>	
  <h3>       Nuevo Servicio Adicional         </h3>
  <h4>****************************************</h4>
</div>

<%= form_for :Servicios, :html => {:method => :post, :class => "form-horizontal"}, :url => { :action => :ServEstac} do |a| %>
	
	<div class="col-sm-offset-3 col-sm-3">
      <%= a.label :nombre, "Nombre del estacionamiento" %>
    </div>
    <div class="col-sm-3">
      <%= a.text_field :nombre, {:class => "form-control", :placeholder => "Ingrese el nombre"} %>
    </div>
    <div class="col-sm-offset-3 col-sm-3">
      <%= a.label :precio, "Precio en soles" %>
    </div>
    <div class="col-sm-3">
      <%= a.number_field :precio, {:class => "form-control", :placeholder => "Ingrese el precio"} %>
    </div>


	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-9">
			<%= a.submit "Aceptar", :class => "btn btn-info", :onclick => "return _onclick();" %>
			<%= a.submit "Cancelar", :class => "btn btn-info" %>
		</div>	
	</div>
	
<% end %>
