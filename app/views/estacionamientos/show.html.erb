<div class="text-center">
  <h1>Estacionamientos</h1>
  <h3><%= @estacionamiento.nombre %><tr>
</div>

<br>
<div class="col-sm-offset-9 col-sm-3">
  <%= link_to "Alquilar", { :controller => "alquiler", :action => "RegAlquiler" }, {:class => "btn btn-primary"} %>
  <%= link_to "Comentar", { :controller => "comentario", :action => "RegComentario" }, {:class => "btn btn-primary"} %>
  <br> 
</div>
<br>
<br>
