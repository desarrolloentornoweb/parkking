<div class="form-group col-sm-6 col-sm-6">
    <!--Imágenes-->
  <div class="form-group">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag "img01.jpg", size: "800x600" %>
        </div>

        <div class="item">
          <%= image_tag "img02.jpg", size: "800x600" %>
        </div>

        <div class="item">
          <%= image_tag "img03.jpg", size: "800x600" %>
        </div>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

<!--Tabla-->

<div class="form-group col-sm-6">
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th scope="row">Departamento</th>
        <td><%= @departamento.Departamento %></td>
      </tr>
      <tr>
        <th scope="row">Provincia</th>
        <td><%= @provincia.Provincia %></td>
      </tr>
      <tr>
        <th scope="row">Distrito</th>
        <td><%= @distrito.Distrito %></td>
      </tr>
      <tr>
        <th scope="row">Dirección</th>
        <td><%= @estacionamiento.direccion %></td>
      </tr>
      <tr>
        <th scope="row">Teléfono fijo</th>
        <td><%= @estacionamiento.telf %></td>
      </tr>
      <tr>
        <th scope="row">Horario de atención</th>
        <td><strong>De: </strong><%= @estacionamiento.hinicio %> <strong> a </strong><%= @estacionamiento.hcierre %></td>
      </tr>
      <tr>
        <th scope="row">Número de espacios</th>
        <td><%= @estacionamiento.nespac %></td>
      </tr>
      <tr>
        <th scope="row">Largo del estacionamiento</th>
        <td><%= @estacionamiento.largo %><strong> m.</strong></td>
      </tr>
      <tr>
        <th scope="row">Ancho del estacionamiento</th>
        <td><%= @estacionamiento.ancho %><strong> m.</strong></td>
      </tr>
      <tr>
        <th scope="row">Altura del estacionamiento</th>
        <td><%= @estacionamiento.alto %><strong> m.</strong></td>
      </tr>
      <tr>
        <th scope="row">Precio por hora en soles (S/.)</th>
        <td><strong>S/. </strong><%= @estacionamiento.precio %></td>
      </tr>
      <tr>
        <th scope="row">Servicio adicionales brindados</th>
        <td>Lavado, Encerado</td>
    </tbody>
  </table>
</div>

