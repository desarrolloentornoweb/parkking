<%= form_with(model: usuario, local: true) do |f| %>
  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :nombres, "Nombres" %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :nombres, { :class => "form-control", :placeholder => "Nombres..." } %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :apellidoPaterno, "Apellido Paterno" %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :apellidoPaterno, { :class => "form-control", :placeholder => "Apellido Paterno..." } %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :apellidoMaterno, "Apellido Materno" %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :apellidoMaterno, { :class => "form-control", :placeholder => "Apellido Materno..." } %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :documentos, "Tipo Documento" %>
  </div>
  <div class="col-sm-4">
    <%= f.collection_select :tipo_documento_id, @documentos.all, :id, :descripcion, { class: "form-control"}, :include_blank =>true %>  
  </div>

  <div class="col-sm-2">
    <%= f.label :numeroDocumento, "Numero Doc" %>
  </div>
  <div class="col-sm-4">
    <%= f.text_field :numeroDocumento, { :class => "form-control", :placeholder => "Ingrese Numero Documento..." } %>
  </div>  
</div>

<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :fechaNacimiento, "Fecha Nacimiento" %>
  </div>
  <div class="col-sm-4">
    <%= f.date_field :fechaNacimiento, {:class => "form-control"} %>
  </div>
  <div class="col-sm-2">
    <%= f.label :celular, "Celular" %>
  </div>
  <div class="col-sm-4">
    <%= f.text_field :celular, { :class => "form-control", :placeholder => "Celular..." } %>
  </div>
</div>

<div class= "form_group">
  <div class="col-sm-2">
    <%= f.label :sexo, "Sexo" %>
  </div>
  <div class= "col-sm-10">
    <%= f.label :sexo, { :class => "radio-inline"} do %>
      <%= f.radio_button :sexo, "M" %>
      Masculino 
    <% end %> 
    <%= f.label :sexo, { :class => "radio-inline"} do %>
      <%= f.radio_button :sexo, "F" %>
      Femenino 
    <% end %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :distrito, "Distrito" %>
  </div>
  <div class="col-sm-4">    
    <%= f.collection_select :distrito_id, @distritos.all, :id, :distrito, { class: 'chosen-select'} %> 
  </div>
  <div class="col-sm-6">   
    <%= f.hidden_field :autenticacion_id, :value => session[:idusuario]  %>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-2">
  </div>    
  <div class="col-sm-4">
    <%= f.submit "GRABAR", :class => "btn btn-primary" %>
  </div>
  <div class="col-sm-4">
    <%= f.submit "SALIR", :class => "btn btn-primary" %>
  </div>
  <div class="col-sm-2">
  </div>    
</div>  

<% end %>
