<div class="text-center">
	<h1>Estacionamiento</h1>
	<h3>Parqueos "El Rápido"</h3>
</div>

<div class="form-group">
  <div class="col-sm-offset-3 col-sm-6 col-sm-offset-3">
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th scope="row">Departamento</th>
        <td>Lima</td>
      </tr>
      <tr>
        <th scope="row">Provincia</th>
        <td>Lima</td>
      </tr>
      <tr>
        <th scope="row">Distrito</th>
        <td>San Borja</td>
      </tr>
      <tr>
        <th scope="row">Dirección</th>
        <td>Av. Las Gradenias 918</td>
      </tr>
      <tr>
        <th scope="row">Teléfono fijo</th>
        <td>364 4736</td>
      </tr>
      <tr>
        <th scope="row">Largo del estacionamiento</th>
        <td>20 m</td>
      </tr>
      <tr>
        <th scope="row">Ancho del estacionamiento</th>
        <td>15 m</td>
      </tr>
      <tr>
        <th scope="row">Altura del estacionamiento</th>
        <td>3 m</td>
      </tr>
      <tr>
        <th scope="row">Precio por hora es soles (S/.)</th>
        <td>8.00</td>
      </tr>
      <tr>
        <th scope="row">Servicio adicionales brindados</th>
        <td>Lavado, Encerado</td>
      </tr>
    </tbody>
  </table>
  </div>
</div>

<!--Imágenes-->
<div class="form-group col-sm-offset-3 col-sm-6 col-sm-offset-3">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag "img01.jpg", size: "800x600" %>
      </div>

      <div class="item">
        <%= image_tag "img02.jpg", size: "800x600" %>
      </div>

      <div class="item">
        <%= image_tag "img03.jpg", size: "800x600" %>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


