	</div>
<% end %>

<script type="text/javascript">
	function _onclick() {
		var nombre = $("#registro_nombre").val();

		if (nombre == '') {
			alert('Falta ingresar el nombre');
			$("#registro_nombre").focus();
			return false;
		}
	}

	function _onclick() {
		var telf = $("#registro_telf").val();

		if (telf == '') {
			alert('Falta ingresar un numero de teléfono');
			$("#registro_telf").focus();
			return false;
		}
	}
</script>