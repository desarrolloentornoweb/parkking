<h1>Cambiar contraseña</h1>
<p>Al dar verficar le llegara un correo para terminar el proceso</p>
<%= form_for :upc, :html => { :method => :post }, :url => { :action => :cambiar } do |f| %>

<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :usuario %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :usuario, { :class => "form-control", :placeholder => "Email o nombre de usuario" } %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :Password, "Constrseña Actual" %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :Password, { :type => "password", :class => "form-control", :placeholder => "Contrasena actual" } %>
	</div>		
</div>
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :RPassword, "Nueva Contraseña" %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :RPassword, { :type => "password", :class => "form-control", :placeholder => "Nueva contrasena" } %>
	</div>		
</div>
<br>
<div class="form-group">
	<div class="col-sm-2">
	</div>		
	<div class="col-sm-4">
		<%= f.submit "CREAR", :class => "btn btn-primary" %>
	</div>
	<div class="col-sm-4">
		<%= f.submit "SALIR", :class => "btn btn-primary" %>
	</div>
	<div class="col-sm-2">
	</div>		
</div>
<% end %>

