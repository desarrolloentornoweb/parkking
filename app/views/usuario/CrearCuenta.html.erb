<h1>CREA TU CUENTA</h1>
<%= form_for :cuenta , :html => { :method => :post }, :url => { :action => :crear } do |f| %>


<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :usuario %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :correo, { :class => "form-control", :placeholder => "Email o nombre de usuario" } %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :documentos, "Tipo Usuario" %>
	</div>
	<div class="col-sm-10">
		<%= f.select :documentos, [["Cliente",1],["DueÃ±o",2]], {:include_blank => "Seleccione"},{:class=>"form-control"} %>
	</div>
</div>	
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :Password, "Password" %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :contrasena, { :type => "password", :class => "form-control", :placeholder => "Tu contrasena" } %>
	</div>		
</div>
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :RPassword, "Confirmar password" %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :RPassword, { :type => "password", :class => "form-control", :placeholder => "Verifica tu contrasena" } %>
	</div>		
</div>
<br>
<div class="form-group">
	<div class="col-sm-2">
	</div>		
	<div class="col-sm-4">
		<%= f.submit "CREAR", :class => "btn btn-primary" %>
	</div>
	<div class="col-sm-4">
		<%= f.submit "SALIR", :class => "btn btn-primary" %>
	</div>
	<div class="col-sm-2">
	</div>		
</div>
<% end %>
