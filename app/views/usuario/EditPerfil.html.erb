<%= form_for :upc, :html => { :method => :post }, :url => { :action => :modificar } do |f| %>
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :nombres, "Nombres" %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :nombres, { :class => "form-control", :placeholder => "Nombres..." } %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :apellidoPaterno, "Apellido Paterno" %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :apellidoPaterno, { :class => "form-control", :placeholder => "Apellido Paterno..." } %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :apellidoMaterno, "Apellido Materno" %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :apellidoMaterno, { :class => "form-control", :placeholder => "Apellido Materno..." } %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :documentos, "Tipo Documento" %>
	</div>
	<div class="col-sm-4">
		<%= f.select :documentos, [["DNI",1],["Pasaporte",2],["Carnet Extranjeria",3]], {:include_blank => "Seleccione"},{:class=>"form-control"} %>
	</div>

	<div class="col-sm-2">
		<%= f.label :numeroDocumento, "Numero Doc" %>
	</div>
	<div class="col-sm-4">
		<%= f.text_field :numeroDocumento, { :class => "form-control", :placeholder => "Ingrese Numero Documento..." } %>
	</div>	
</div>

<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :fechaNacimiento, "Fecha Nacimiento" %>
	</div>
	<div class="col-sm-4">
		<div class='input-group date' id='datetimepicker1'>
    		<input type='text' class="form-control" />
			<span class="input-group-addon">
				<span class="glyphicon glyphicon-calendar"></span>
			</span>
      	</div>	
	</div>
	<div class="col-sm-2">
		<%= f.label :celular, "Celular" %>
	</div>
	<div class="col-sm-4">
		<%= f.text_field :celular, { :class => "form-control", :placeholder => "Celular..." } %>
	</div>
</div>
<div class= "form_group">
	<div class="col-sm-2">
		<%= f.label :sexo, "Sexo" %>
	</div>
	<div class= "col-sm-10">
		<%= f.label :sexo, { :class => "radio-inline"} do %>
			<%= f.radio_button :sexo, "M" %>
			Masculino 
		<% end %>	
		<%= f.label :sexo, { :class => "radio-inline"} do %>
			<%= f.radio_button :sexo, "F" %>
			Femenino 
		<% end %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-2">
	</div>		
	<div class="col-sm-4">
		<%= f.submit "GRABAR", :class => "btn btn-primary" %>
	</div>
	<div class="col-sm-4">
		<%= f.submit "SALIR", :class => "btn btn-primary" %>
	</div>
	<div class="col-sm-2">
	</div>		
</div>


<% end %>
