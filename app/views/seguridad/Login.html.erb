<h1>Bienvenido, Ingrese a su Cuenta</h1>

<%= form_for :upc, :html => {:method => :post, :class => "form-horizontal"}, :url => { :action => :validar} do |a| %>
				
	<div class="form-group">

		<div class="col-sm-1"> 
			<%= a.label :usuario, "Correo" %>
		</div>

    <div class="input-group">
    	<%= a.text_field :usuario, {:class => "form-control", :placeholder => "Ingrese su cuenta de correo"} %>
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>   
    </div>
	</div>
		<div class="form-group">
		<div class="col-sm-1">
			<%= a.label :contraseña, "Contraseña" %>
		</div>

   <div class="input-group">
      <input id="password" type="password" class="form-control" name="password" placeholder="Ingrese su Contraseña">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    </div>
	</div>
	

	<div class="form-group">
			<div class="col-sm-10">
				<%= link_to "¿No recuerda su contraseña?", { :controller => "seguridad", :action => "RecupContr"} %>
			</div>
	</div>

	<div class="col-lg-2">
		<%= a.submit "LOGGIN", :class => "btn btn-info", :onclick => "return _onclick();" %>
	</div>

	<div class="col-lg-2">
		<%= a.submit "Cancelar", :class => "btn btn-info", :onclick => "return _onclick();" %>
	</div>
<% end %>
