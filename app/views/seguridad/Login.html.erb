<h1>INGRESAR A MI CUENTA</h1>
<%= form_for :upc, :html => { :method => :post }, :url => { :action => :validar } do |f| %>

<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :usuario %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :usuario, { :class => "form-control", :placeholder => "Email o nombre de usuario" } %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-2">
		<%= f.label :Password %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :Password, { :type => "password", :class => "form-control", :placeholder => "Tu contrasena" } %>
	</div>		
</div>
<br>
<div class="form-group">
	<div class="col-sm-2">
	</div>		
	<div class="col-sm-4">
		<%= f.submit "INGRESAR", :class => "btn btn-primary" %>
	</div>
	<div class="col-sm-4">
		<%= f.submit "SALIR", :class => "btn btn-primary" %>
	</div>
	<div class="col-sm-2">
	</div>		
</div>
<div class="form-group">
	<div class="col-sm-10">		
		<%= link_to "¿Olvidaste tu contraseña?", { :controller => "seguridad", :action => "RecupContr" } %>	
	</div>		
</div>	
<% end %>
